{
  "name": "@inkycut/render",
  "version": "0.1.0",
  "description": "InkyCut video rendering CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "inkycut-render": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --jsx react-jsx && node src/bundle.mjs",
    "build-bundle": "node src/bundle.mjs",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remotion/cli": "4.0.325",
    "@remotion/renderer": "^4.0.325",
    "@inkycut/editor": "file:../editor",
    "chalk": "^5.3.0",
    "commander": "^9.4.1",
    "node-fetch": "3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.3",
    "typescript": "5.8.2",
    "vite": "^4.3.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
